<PreferenceScreen xmlns:app="http://schemas.android.com/apk/res-auto">

    <PreferenceCategory app:title="@string/owm_header">

        <EditTextPreference
            app:key="owmKey"
            app:title="@string/owmkey_title"
            app:useSimpleSummaryProvider="true" />

    </PreferenceCategory>

    <PreferenceCategory app:title="@string/design_header">

        <SwitchPreferenceCompat
            app:key="dark_theme"
            app:title="@string/dark_title" />

        <SwitchPreferenceCompat
            app:key="customImg"
            app:summaryOff="@string/customImg_summary_off"
            app:summaryOn="@string/customImg_summary_on"
            app:title="@string/customImg_title" />

    </PreferenceCategory>

</PreferenceScreen>
